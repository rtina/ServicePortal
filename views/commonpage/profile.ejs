<%- layout("/layouts/boilerplate") %>

<!-- =========================== PROFILE SECTION =========================== -->


<section class="profile-header">
  <div class="profile-info">
    <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8aHVtYW4lMjBmYWNlfGVufDB8fDB8fHww" alt="Marcus Rivera" class="profile-avatar">
    <div class="profile-details">
      <h2><%= artistDetails.Name %></h2>
      <div class="rating-location">
        <span class="rating"><i class="fas fa-star"></i> 4.8 (89 reviews)</span>
        <span class="location"><i class="fas fa-map-marker-alt"></i><%= artistDetails.location %></span>
      </div>
      <div class="profile-tags">
        <% artistDetails.specializations.forEach(function(skill) { %>
          <span class="tag"><%= skill %></span>
        <% }); %>
      </div>
      <p class="profile-bio">
        <%= artistDetails.description %>
      </p>
      <div class="availability-meta">
        <span><i class="fas fa-clock"></i> Usually responds in 1 hour</span>
        <span><i class="fas fa-dollar-sign"></i> From ₹<%= artistDetails.Rate %></span>
        <span class="available"><%= artistDetails.availabilityStatus %></span>
      </div>
    </div>
  </div>

  <div class="profile-cta">
    <h3>₹95/hr</h3>
    <p>Starting from ₹750</p>
    <button class="btn btn-primary">Contact Artist</button>
    <button class="btn btn-outline">Request Quote</button>
  </div>
</section>

<!-- =========================== PORTFOLIO SECTION =========================== -->
<section class="portfolio-section">
  <div class="portfolio-nav">
    <a href="#">Portfolio (3)</a>
    <a href="#">Services (1)</a>
    <a href="#">Reviews (1)</a>
  </div>

  <div class="portfolio-filters">
    <button class="filter-btn active">All Work</button>
    <button class="filter-btn">Image</button>
    <button class="filter-btn">Video</button>
    <button class="filter-btn">Gif</button>
  </div>

  <div class="portfolio-items">
    <div class="portfolio-card">
      <img src="https://images.pexels.com/photos/29266898/pexels-photo-29266898.jpeg" alt="Fantasy Character">
      <div class="card-info">
        <h4>Fantasy Character Walk Cycle</h4>
        <p>Smooth character walk cycle animation for a fantasy RPG game</p>
        <span class="tag">2D Animation</span>
        <span class="tag">Character Design</span>
      </div>
    </div>

    <div class="portfolio-card">
      <div class="video-preview">
        <img src="https://images.pexels.com/photos/17147713/pexels-photo-17147713.jpeg" alt="Corporate Animation">
        <i class="fas fa-play play-icon"></i>
      </div>
      <div class="card-info">
        <h4>Corporate Logo Animation</h4>
        <p>Clean and professional logo reveal animation for a tech startup</p>
        <span class="tag">Motion Graphics</span>
        <span class="tag">Logo Design</span>
      </div>
    </div>

    <div class="portfolio-card">
      <div class="video-preview">
        <img src="https://images.pexels.com/photos/28655002/pexels-photo-28655002.jpeg" alt="3D Showcase">
        <i class="fas fa-play play-icon"></i>
      </div>
      <div class="card-info">
        <h4>3D Product Showcase</h4>
        <p>Dynamic 3D animation showcasing a new smartphone design</p>
        <span class="tag">3D Animation</span>
        <span class="tag">Product Visualization</span>
      </div>
    </div>
  </div>
</section>
