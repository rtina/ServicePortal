<%- layout('/layouts/boilerplate') %>

<div class="container">
    <h2>Browse by Category</h2>
    <div class="categories">
      <button class="tab active" data-category="3d">3D Animation</button>
      <button class="tab" data-category="2d">2D Animation</button>
      <button class="tab" data-category="motion">Motion Graphics</button>
      <button class="tab" data-category="character">Character Animation</button>
      <button class="tab" data-category="vfx">VFX</button>
      <button class="tab" data-category="product">Product Visualization</button>
      <button class="tab" data-category="explainer">Explainer Videos</button>
      <button class="tab" data-category="game">Game Animation</button>
    </div>

    < class="main-content">
    <div class="filters">
      <div class="filter-sidebar">
        <div class="filter-section">
          <h3>Search Services</h3>
          <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Search services...">
          </div>
        </div>

        <div class="filter-section">
          <h3>Price Range: $0 - $5000</h3>
          <div class="price-range">
            <input type="number" placeholder="0" min="0" max="5000">
            <span>-</span>
            <input type="number" placeholder="5000" min="0" max="5000">
          </div>
        </div>

        <div class="filter-section">
          <h3>Max Delivery Time</h3>
          <select class="delivery-select">
            <option value="any">Any Time</option>
            <option value="7">Up to 7 days</option>
            <option value="14">Up to 14 days</option>
            <option value="21">Up to 21 days</option>
            <option value="30">Up to 30 days</option>
          </select>
        </div>

        <div class="filter-section">
          <h3>Minimum Artist Rating</h3>
          <select class="rating-select">
            <option value="any">Any Rating</option>
            <option value="4.5">4.5+ Stars</option>
            <option value="4.0">4.0+ Stars</option>
            <option value="3.5">3.5+ Stars</option>
            <option value="3.0">3.0+ Stars</option>
          </select>
        </div>

        <button class="clear-filters-btn">Clear All Filters</button>
      </div>
    </div>
  </div>
    <div id="service-list" class="services"></div>
  
    <button id="load-more">Load More Services</button>
  <br>
  

  <script src="service.js"></script>
</body>
</html>