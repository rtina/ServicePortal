<%- layout('/layouts/boilerplate') %>

<div class="container-services">
  <h2>Browse by Category</h2>

  <div class="categories">
    <button class="tab active" data-category="3d">3D Animation</button>
    <button class="tab" data-category="2d">2D Animation</button>
    <button class="tab" data-category="motion">Motion Graphics</button>
    <button class="tab" data-category="character">Character Animation</button>
    <button class="tab" data-category="vfx">VFX</button>
    <button class="tab" data-category="product">Product Visualization</button>
    <button class="tab" data-category="explainer">Explainer Videos</button>
    <button class="tab" data-category="game">Game Animation</button>
  </div>

  <div class="main-content" style="display: flex; gap: 20px; margin-top: 30px;">
    <!-- Sidebar Filters -->
    <div class="filters" style="flex: 1; max-width: 250px;">
      <div class="filter-sidebar">
        <div class="filter-section">
          <h3>Search Services</h3>
          <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Search services...">
          </div>
        </div>

        <div class="filter-section">
          <h3>Price Range: $0 - $5000</h3>
          <div class="price-range">
            <input type="number" placeholder="0" min="0" max="5000">
            <span>-</span>
            <input type="number" placeholder="5000" min="0" max="5000">
          </div>
        </div>

        <div class="filter-section">
          <h3>Max Delivery Time</h3>
          <select class="delivery-select">
            <option value="any">Any Time</option>
            <option value="7">Up to 7 days</option>
            <option value="14">Up to 14 days</option>
            <option value="21">Up to 21 days</option>
            <option value="30">Up to 30 days</option>
          </select>
        </div>

        <div class="filter-section">
          <h3>Minimum Artist Rating</h3>
          <select class="rating-select">
            <option value="any">Any Rating</option>
            <option value="4.5">4.5+ Stars</option>
            <option value="4.0">4.0+ Stars</option>
            <option value="3.5">3.5+ Stars</option>
            <option value="3.0">3.0+ Stars</option>
          </select>
        </div>

        <button class="clear-filters-btn">Clear All Filters</button>
      </div>
    </div>

    <!-- Services Display -->
    <div id="service-list" class="services" style="flex: 3; display: flex; flex-wrap: wrap; gap: 20px;">
      <div class="card">
        <div class="service-image">
          <img src="https://images.pexels.com/photos/28655002/pexels-photo-28655002.jpeg" alt="3D Logo Animation">
        </div>
      
        <div class="service-content">
          <h3>3D Logo Animation</h3>
          <p class="description">Professional 3D logo animation with modern effects and transitions.</p>
      
          <div class="artist-box">
            <img class="artist-avatar" src="https://img.freepik.com/free-photo/portrait-white-man-isolated_53876-40306.jpg?semt=ais_hybrid&w=740" alt="John Doe">
            <div class="artist-info">
              <span class="artist-name">John Doe</span>
              <div class="artist-rating">
                <i class="fas fa-star"></i>
                <span>4.8</span>
              </div>
            </div>
          </div>
      
          <div class="meta-box">
            <i class="far fa-clock"></i>
            <span>7 days</span>
          </div>
      
          <div class="tag-box">
            <span class="tag">3D</span>
            <span class="tag">Logo</span>
            <span class="tag">Branding</span>
          </div>
      
          <div class="price-box">
            <span>Starting at</span> <strong>$1200</strong>
          </div>
      
          <a href="/service/3d-logo-animation" class="view-details-btn">View Details</a>
        </div>
      </div>
      
    </div>
  </div>

  <!-- Load More Button -->
  <div style="text-align: center; margin-top: 30px;">
    <button id="load-more">Load More Services</button>
  </div>
</div>

