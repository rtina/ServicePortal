<%- layout("/layouts/boilerplate") %>

<div class="find-artist-container">
    <div class="header">
        <h1>Browse Artists</h1>
        <p>Discover talented animators and motion designers</p>
    </div>

    <div class="content-wrapper">
        <!-- Filters Section -->
        <div class="filters-section">
            <h2>Filters</h2>
            
            <!-- Search -->
            <div class="filter-group">
                <h3>Search</h3>
                <div class="search-input">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search artists...">
                </div>
            </div>

            <!-- Category -->
            <div class="filter-group">
                <h3>Category</h3>
                <select class="form-select">
                    <option selected>All Categories</option>
                    <option>2D Animation</option>
                    <option>3D Animation</option>
                    <option>Motion Graphics</option>
                </select>
            </div>

            <!-- Skills -->
            <div class="filter-group">
                <h3>Skills</h3>
                <div class="skills-list">
                    <label class="skill-checkbox">
                        <input type="checkbox"> After Effects
                    </label>
                    <label class="skill-checkbox">
                        <input type="checkbox"> Premiere Pro
                    </label>
                    <label class="skill-checkbox">
                        <input type="checkbox"> Photoshop
                    </label>
                    <label class="skill-checkbox">
                        <input type="checkbox"> Illustrator
                    </label>
                    <label class="skill-checkbox">
                        <input type="checkbox"> Maya
                    </label>
                    <label class="skill-checkbox">
                        <input type="checkbox"> Blender
                    </label>
                </div>
            </div>

            <!-- Hourly Rate -->
            <div class="filter-group">
                <h3>Hourly Rate: $0 - $200</h3>
                <div class="rate-inputs">
                    <input type="number" placeholder="0" min="0">
                    <input type="number" placeholder="200" max="200">
                </div>
            </div>

            <!-- Minimum Rating -->
            <div class="filter-group">
                <h3>Minimum Rating</h3>
                <select class="form-select">
                    <option selected>Any Rating</option>
                    <option>4.5+</option>
                    <option>4.0+</option>
                    <option>3.5+</option>
                </select>
            </div>

            <!-- Availability -->
            <div class="filter-group">
                <label class="availability-checkbox">
                    <input type="checkbox"> Available now only
                </label>
            </div>
        </div>

        <!-- Artists Grid Section -->
        <div class="artists-section">
            <div class="artists-header">
                <span>4 artists found</span>
                <div class="view-controls">
                    <select class="form-select sort-select">
                        <option selected>Best Match</option>
                        <option>Highest Rated</option>
                        <option>Lowest Price</option>
                    </select>
                    <div class="view-toggles">
                        <button class="view-btn active"><i class="fas fa-th-large"></i></button>
                        <button class="view-btn"><i class="fas fa-list"></i></button>
                    </div>
                </div>
            </div>

            <div class="artists-grid">
                <!-- Artist Card 1 -->
                <% for(let Artists of artistProfile){%>
                <div class="artist-card">
                    <div class="artist-header">
                        <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8aHVtYW4lMjBmYWNlfGVufDB8fDB8fHww" alt="Sarah Chen" class="artist-avatar">
                        <div class="artist-info">
                            <h3><%= Artists.Name %></h3>
                            <div class="location">
                                <i class="fas fa-map-marker-alt"></i>
                                <%= Artists.location %>
                            </div>
                        </div>
                        <div class="rating">
                            <i class="fas fa-star"></i>
                            <span>4.9 (127)</span>
                        </div>
                    </div>
                    <div class="artist-status available"><%= Artists.availabilityStatus %></div>
                    <p class="artist-description"><%= Artists.description %></p>
                    
                    <div class="artist-skills">
                        <% Artists.specializations.forEach(function(skill) { %>
                          <span class="skill-tag"><%= skill %></span>
                        <% }); %>
                      </div>
                    <div class="artist-footer">
                        <div class="price">Starting from â‚¹<%= Artists.Rate %></div>
                        <a href="/profile/<%= Artists._id %>"><button class="view-profile-btn">View Profile</button></a>
                    </div>
                </div>
                <% } %>


